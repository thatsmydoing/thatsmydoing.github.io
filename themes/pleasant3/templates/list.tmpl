## -*- coding: utf-8 -*-
<%inherit file="base.tmpl"/>

<%block name="content">
<article class="listpage">
    <header>
        <h1>${title}</h1>
    </header>
    %if items:
    <ul class="postlist">
    % for text, link, count in items:
        <li><a href="${link}">${text} (${count})</a>
    % endfor
    </ul>
    %else:
    <p>${messages("Nothing found.")}</p>
    %endif
</article>
</%block>
